<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
<div>
    <canvas id="pieDiagram" style="width: 30%"></canvas>
    <table style="width:100%" class="table table-striped">
        <tr>
            <th>Topic</th>
            <th>Date</th>
            <th>Author</th>
            <th>Message</th>
        </tr>
        {% for d in data %}
            <tr>
                <td>{{ d['topic'] }}</td>
                <td>{{ d['date'] }}</td>
                <td>{{ d['author'] }}</td>
                <td>{{ d['message'] }}</td>
            </tr>
        {% endfor %}
    </table>
</div>
</body>
<script>
    let authorMessagesCount = {{  author_messages_count  }}
    let topicMessagesCount = {{  topic_messages_count  }}
    let data = {
        datasets: [{
            label: 'Кількість повідомлень',
            data: [authorMessagesCount, topicMessagesCount],
            backgroundColor: [
                '#ffde59',
                '#6eebe3'
            ]
        }],
        labels: [
            'Author\'s posts',
            'All posts'
        ]
    };
    let ctx = document.getElementById('pieDiagram').getContext('2d')
    let chart = new Chart(ctx, {
        type: 'pie',
        data: data,
        options: {}
    })

</script>
</html>